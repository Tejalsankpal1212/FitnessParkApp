<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AboutFragment"
              android:background="@color/background_color"
              android:orientation="vertical">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/purple_logo_with_name"
            android:layout_gravity="center"
    android:layout_marginTop="15dp"/>
    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This FitnessPark Training platform for all membership, merchandise and class booking.Thank you for joining FitnessPark. See you soon."
            android:textSize="15dp"
            android:textColor="@color/dark_text_color"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginTop="15dp">
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:tint="@color/primary_color"
                    android:src="@drawable/android_icon_filled"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/dark_text_color"
                  android:text="Application Version : 1.0.0.0"
                  android:textStyle="bold"
                  android:textSize="15dp"
                  android:layout_marginLeft="3dp"
        android:gravity="center"/>
    </LinearLayout>

</LinearLayout>