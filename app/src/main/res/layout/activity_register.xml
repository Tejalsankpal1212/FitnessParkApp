<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:background="@color/background_color"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:background="@color/primary_color">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/white_logo_with_name"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/primary_color"
              android:textStyle="bold"
              android:layout_marginTop="10dp"
              android:text="REGISTER"
              android:layout_gravity="center"
              android:textSize="18sp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/primary_color"
                  android:textStyle="bold"
                  android:text="First Name"
                  android:textSize="14sp"
        />

        <EditText
                android:id="@+id/memberFirstName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/dark_text_color"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/primary_color"
                  android:textStyle="bold"
                  android:layout_marginTop="10dp"
                  android:text="Middle Name"
                  android:textSize="14sp"
        />

        <EditText
                android:id="@+id/memberMiddleName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/dark_text_color"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/primary_color"
                  android:textStyle="bold"
                  android:layout_marginTop="10dp"
                  android:text="Last Name"
                  android:textSize="14sp"
        />

        <EditText
                android:id="@+id/memberLastName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/dark_text_color"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/primary_color"
                  android:textStyle="bold"
                  android:text="Date Of Birth"
                  android:layout_marginTop="10dp"
                  android:textSize="14sp"
        />

        <EditText
                android:id="@+id/memberDateOfBirth"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="date"
                android:textColor="@color/dark_text_color"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/primary_color"
                  android:textStyle="bold"
                  android:text="Email Id"
                  android:layout_marginTop="10dp"
                  android:textSize="14sp"
        />

        <EditText
                android:id="@+id/memberEmailId"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/dark_text_color"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/primary_color"
                  android:textStyle="bold"
                  android:text="Mobile No"
                  android:layout_marginTop="10dp"
                  android:textSize="14sp"
        />

        <EditText
                android:id="@+id/memberMobileNo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="@color/dark_text_color"
      />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/btnRegister"
        />

    </LinearLayout>
</LinearLayout>